<?xml version="1.0" encoding="utf-8"?>


<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#49515c"
    android:paddingEnd="10dp">

    <LinearLayout
        android:id="@+id/cvalue2"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_heineken" />

        <TextView
            android:id="@+id/t2value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#d2b566"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/t2value2"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t2value3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t2value4"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t2value5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="20sp" />


</TableRow>



